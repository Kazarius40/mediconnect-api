# JWT Configuration
JWT_SECRET=your_jwt_secret_here
ACCESS_TOKEN_EXPIRATION_TIME=300
REFRESH_TOKEN_EXPIRATION_TIME=86400

# MySQL Database Configuration
DB_TYPE=mysql
DB_HOST=db
DB_PORT=3306
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password
DB_DATABASE=your_database_name

# Application Port
PORT=3000

# Admin Credentials
ADMIN_EMAIL=test@example.com
ADMIN_PASSWORD=Qwerty1!

# SMTP (for sending emails via Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com

# IMPORTANT: Paste your generated Gmail app password here (no spaces!)
SMTP_PASS=your_gmail_app_password_without_spaces

# Frontend URL (used for generating links in emails)
FRONTEND_URL=http://localhost:3001
INTERNAL_FRONTEND_URL=http://frontend:3001

NEXT_PUBLIC_API_URL=http://localhost:3000
INTERNAL_API_URL=http://api:3000
